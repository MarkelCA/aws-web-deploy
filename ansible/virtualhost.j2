server {
    listen 80;
    server_name {{ ansible_host }};

    root /var/www/{{ ansible_host }}/html;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    error_log /var/log/nginx/{{ ansible_host }}_error.log;
    access_log /var/log/nginx/{{ ansible_host }}_access.log;
}

